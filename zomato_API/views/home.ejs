        <form action="/restaurants" method="POST" class="form-inline">
          <input class="form-control " style="margin-right: 1.5rem;" name="city" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-info my-2 my-sm-0" type="submit">Search</button>
        </form>
