      <%for (i of main_data){%>
        <div class="card mb-3" style="max-width: 1500px; margin: 4% auto; border-radius: 25px; background-color: whitesmoke;">
          <div class="row no-gutters">
            <div class="col-md-4">
              <img src='<%=i.image_url%>' style="border-radius: 20px;" class="card-img" alt="image is not available ">
            </div>
            <div class="col-md-8">
              <div class="card-body" style="font-family: 'Signika', sans-serif;">
                <a href="<%=i.url%>"><h1 class="card-title"><%=i.name%></h1></a>
                <h4 class="card-text"><%=i.location.address%>.</h4>
                <dl class="row">
                    <dt class="col-sm-3">Average_cost:</dt>
                    <dd class="col-sm-9"><%=i.average_cost%></dd>
                  
                    <dt class="col-sm-3">Cuisines:</dt>
                    <dd class="col-sm-9"><%=i.cuisines%></dd>
                  
                    <dt class="col-sm-3">Has online deleivery:</dt>
                    <dd class="col-sm-9"><%=i.online_delivery%></dd>
                  
                    <dt class="col-sm-3 text-truncate">price range:</dt>
                    <dd class="col-sm-9"><%=i.price_range%></dd>
                  

                  </dl>
              </div>
            </div>
          </div>
        </div>
     <% }%>
